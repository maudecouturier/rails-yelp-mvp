<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.rating %> |
     <%= review.content %></li>
  <% end %>
</ul>

<p><%= link_to 'Add a review', new_restaurant_review_path(@restaurant)  %> |
<%= link_to 'Go back to the restaurants list', restaurants_path %></p>


